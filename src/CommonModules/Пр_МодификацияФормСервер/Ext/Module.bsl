// Определение и обработка создания формы
//
// Параметры:
// ЭтотОбъект - ФормаКлиентскогоПриложения
// СтандартнаяОбработка - Булево
// Отказ - Булево
// 
Процедура ПриСозданииНаСервере(ЭтотОбъект, СтандартнаяОбработка, Отказ) Экспорт
	
	Если ЭтотОбъект.ИмяФормы = "Документ.ЗаданиеНаРаботу.Форма.ФормаДокумента" Тогда
		Документ_ЗаданиеНаРаботу_Форма_ФормаЭлемента(ЭтотОбъект, СтандартнаяОбработка, Отказ);	 
	ИначеЕсли ЭтотОбъект.ИмяФормы = "Справочник.Проекты.Форма.ФормаЭлемента" Тогда
		Справочник_Проекты_Форма_ФормаЭлемента(ЭтотОбъект, СтандартнаяОбработка, Отказ);
	ИначеЕсли ЭтотОбъект.ИмяФормы = "Документ.НачислениеЗарплатыУНФ.Форма.ФормаДокумента" Тогда
		Документ_НачислениеЗарплатыУНФ_Форма_ФормаДокумента(ЭтотОбъект, СтандартнаяОбработка, Отказ);
	ИначеЕсли ЭтотОбъект.ИмяФормы = "Справочник.ВидыЦенКонтрагентов.Форма.ФормаЭлемента" Тогда
		Справочник_ВидыЦенКонтрагентов_Форма_ФормаЭлемента(ЭтотОбъект, СтандартнаяОбработка, Отказ);
	ИначеЕсли ЭтотОбъект.ИмяФормы = "Справочник.Пользователи.Форма.ФормаЭлемента" Тогда
		Справочник_Пользователи_Форма_ФормаЭлемента(ЭтотОбъект, СтандартнаяОбработка, Отказ);
	КонецЕсли;
	
КонецПроцедуры   

#КонецОбласти

#Область СлужебныеПроцедурыИФункции

// Обработка создания формы документа ЗаданиеНаРаботу
//
// Параметры:
// ЭтотОбъект - ФормаКлиентскогоПриложения
// СтандартнаяОбработка - Булево
// Отказ - Булево
// 
Процедура Документ_ЗаданиеНаРаботу_Форма_ФормаЭлемента(ЭтотОбъект, СтандартнаяОбработка, Отказ)

	Элементы = ЭтотОбъект.Элементы;
	
	ДобавляемыеРеквизиты = Новый Массив; 
	СтатусЗадания = Новый РеквизитФормы("Пр_Статус",
										ОбщегоНазначения.ОписаниеТипаСтрока(0),,
										НСтр("ru = 'Статус'"));
	ДобавляемыеРеквизиты.Добавить(СтатусЗадания);
	ЭтотОбъект.ИзменитьРеквизиты(ДобавляемыеРеквизиты);
	
	Элементы.ГруппаВидИСостояние.Видимость = Ложь;
	Элементы.ГруппаЗаданиеУтвердил.Видимость = Ложь;
	Элементы.КоманднаяПанельРедактироватьСписком.Видимость = Ложь;
	Элементы.ПланированиеЗаказчикРабота.Видимость = Ложь;
	
	НовыйЭлемент = Элементы.Вставить("Пр_Статус", Тип("ПолеФормы"), Элементы.ЛеваяКолонка, Элементы.Сотрудник);
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеНадписи;
	НовыйЭлемент.ПутьКДанным = "Пр_Статус";
	НовыйЭлемент.ЦветФона = WebЦвета.Голубой; 
	
	Элементы.ЛеваяКолонка.РастягиватьПоГоризонтали = Ложь;
	
	ГруппаПраваяКолонка = Элементы.Добавить("Пр_ПраваяКолонка", Тип("ГруппаФормы"), Элементы.Шапка);
	ГруппаПраваяКолонка.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	ГруппаПраваяКолонка.Группировка = ГруппировкаПодчиненныхЭлементовФормы.ГоризонтальнаяВсегда;
	ГруппаПраваяКолонка.РастягиватьПоГоризонтали = Ложь;
	ГруппаПраваяКолонка.ОтображатьЗаголовок = Ложь;
	
	ГруппаПраваяКолонка1 = Элементы.Добавить("Пр_ПраваяКолонка1", Тип("ГруппаФормы"), ГруппаПраваяКолонка);
	ГруппаПраваяКолонка1.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	ГруппаПраваяКолонка1.Группировка = ГруппировкаПодчиненныхЭлементовФормы.Вертикальная;    
	ГруппаПраваяКолонка1.ОтображатьЗаголовок = Ложь;
	
	ГруппаПраваяКолонка2 = Элементы.Добавить("Пр_ПраваяКолонка2", Тип("ГруппаФормы"), ГруппаПраваяКолонка);
	ГруппаПраваяКолонка2.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	ГруппаПраваяКолонка2.Группировка = ГруппировкаПодчиненныхЭлементовФормы.Вертикальная; 
	ГруппаПраваяКолонка2.ОтображатьЗаголовок = Ложь;
	
	Элементы.Шапка.Группировка = ГруппировкаПодчиненныхЭлементовФормы.ГоризонтальнаяВсегда;
	
	НовыйЭлемент = Элементы.Добавить("Пр_Проект", Тип("ПолеФормы"), ГруппаПраваяКолонка1);  
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	НовыйЭлемент.ПутьКДанным = "Объект.Пр_Проект";      
	НовыйЭлемент.Заголовок = НСтр("ru = 'Проект'");
	НовыйЭлемент.УстановитьДействие("ОбработкаВыбора", "Пр_ПроектОбработкаВыбора");
	
	НовыйЭлемент = Элементы.Добавить("Пр_Идентификатор", Тип("ПолеФормы"),ГруппаПраваяКолонка1);
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	НовыйЭлемент.ПутьКДанным = "Объект.Пр_Идентификатор";
	НовыйЭлемент.Заголовок = НСтр("ru = 'Идентификатор GitLab'");
	НовыйЭлемент.ТолькоПросмотр = Истина; 
	
	НовыйЭлемент = Элементы.Добавить("Пр_ОценкаВGitLab", Тип("ПолеФормы"), ГруппаПраваяКолонка2);
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	НовыйЭлемент.ПутьКДанным = "Объект.Пр_ОценкаВGitLab";
	НовыйЭлемент.Заголовок = НСтр("ru = 'Оценка в GitLab (Часы)'");
	НовыйЭлемент.ТолькоПросмотр = Истина;
	
	НовыйЭлемент = Элементы.Добавить("Пр_ФактВGitLab", Тип("ПолеФормы"), ГруппаПраваяКолонка2);
	НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	НовыйЭлемент.ПутьКДанным = "Объект.Пр_ФактВGitLab";
	НовыйЭлемент.Заголовок = НСтр("ru = 'Факт в GitLab (Часы)'");
	НовыйЭлемент.ТолькоПросмотр = Истина;
	
КонецПроцедуры

